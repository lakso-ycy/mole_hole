{
  "name": "fp-pso-fleksibel",
  "version": "1.0.0",
  "description": "A simple Mole and Hole game built with HTML, CSS, and JS.",
  "main": "script.js",
  "scripts": {
    "// --- CLEAN & PREPARE ---": "",
    "clean": "rm -rf instrumented coverage .nyc_output results",
    "prepare-test-env": "npm run clean && mkdir -p instrumented && npx nyc instrument ./script.js instrumented/script.js && cp index.html style.css package.json hammer-hit.png hammer.png README.md instrumented/ && cp -r img sounds instrumented/",
    "// --- CORE TASKS ---": "",
    "lint": "eslint . --ext .js --ignore-pattern coverage && stylelint \"**/*.css\" \"!coverage/**/*.css\" --ignore-path .gitignore",
    "serve": "http-server . -p 8080",
    "serve:instrumented": "http-server ./instrumented -p 8080",
    "// --- CYPRESS TESTING ---": "",
    "cy:run": "cypress run --browser chrome",
    "cy:open": "cypress open",
    "// --- LOCAL WORKFLOWS ---": "",
    "test:coverage": "npm run prepare-test-env && npm run cy:run",
    "dev": "npm run prepare-test-env && cypress open"
  },
  "nyc": {
    "all": true,
    "include": [
      "script.js"
    ],
    "exclude": [
      "cypress/**",
      "node_modules/**",
      "instrumented/**"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "report-dir": "coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://psofleksibel@dev.azure.com/psofleksibel/fp-pso-fleksibel/_git/fp-pso-fleksibel"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.4",
    "@eslint/js": "^9.27.0",
    "cypress": "^14.4.1",
    "cypress-file-upload": "^5.0.8",
    "eslint": "^9.27.0",
    "globals": "^16.2.0",
    "http-server": "^14.1.1",
    "nyc": "^17.1.0",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0"
  }
}
